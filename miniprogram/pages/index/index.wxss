.user-info{
    align-items: center;
    padding: 20rpx;
}

.avatar{
    width: 50rpx;
    height: 50rpx;
    border-radius: 40rpx;
    overflow: hidden;
}

.nickname{
    margin-left: 10rpx;
    font-size: 35rpx;
}

.list{
    width: 100%;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding-left: 15rpx;
    padding-right: 15rpx;
}

.item{
    width: calc(25% - 10rpx);
    flex-direction: column;
    align-items: center;
    height: 300rpx;
    background-color: #fafafa;
    margin: 0rpx 5rpx;
    margin-bottom: 10rpx;
    justify-content: center;
    position: relative;
    border-radius: 10rpx;
    overflow: hidden;
}

.item image{
    width: 100%;
    height: 100%;
}

.cate{
    position: absolute;
    bottom: 0rpx;
    font-size: 25rpx;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    width: 100%;
    text-align: center;
    padding: 3rpx;
    box-sizing: border-box;
}